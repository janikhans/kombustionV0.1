<%= render 'shared/error_messages', object: f.object %>

<%= f.label :make %>
<%= f.text_field :make, class: 'form-control', disabled: true %>

<%= f.label :model %>
<%= f.text_field :model, class: 'form-control', disabled: true %>

<%= f.label :year %>
<%= f.text_field :year, class: 'form-control', disabled: true %>

<%= f.label :name, "A Custom Name" %>
<%= f.text_field :name, class: 'form-control' %>

<%= f.label :unit_of_measurement %>
<%= f.select(:unit_of_measurement, options_for_select(['Hours', 'Kilometers', 'Miles']), {}, {class: "form-control"}) %>

<%= f.label :category %>
<%= f.select(:category, options_for_select(['Dirt Bike', 'Street', 'Cruiser', 'UTV', 'ATV', 'Snowmobile']), {}, {class: "form-control"}) %>

<%= f.label "Make it private?" %> 
<%= f.check_box :is_private, {class: "form-control"} %></br>