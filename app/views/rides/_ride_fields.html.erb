<%= render 'shared/error_messages', object: f.object %>

<%= f.label :name, "A Custom Name" %>
<%= f.text_field :name, class: 'form-control' %>

<%= f.label :make %> 
<%= f.select(:make, options_for_select(['Beta', 'BMW', 'GasGas', 'Honda', 'Husqvarna', 'Kawasaki', 'KTM', 'Sherco', 'Suzuki', 'TM', 'Yamaha']), {}, {class: "form-control"}) %>

<%= f.label :model %>
<%= f.text_field :model, class: 'form-control' %>

<%= f.label :year %>
<%= f.number_field(:year, class: "form-control") %>

<%= f.label :unit_of_measurement %>
<%= f.select(:unit_of_measurement, options_for_select(['Hours', 'Kilometers', 'Miles']), {}, {class: "form-control"}) %>

<%= f.label :category %>
<%= f.select(:category, options_for_select(['Dirt Bike', 'Street', 'Cruiser', 'UTV', 'ATV', 'Snowmobile']), {}, {class: "form-control"}) %>
