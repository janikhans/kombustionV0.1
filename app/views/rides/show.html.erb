<% provide(:title, @ride.name) %>
<div class="col-lg-12">
    <h1 class="page-header"><%= @ride.name %></h1>
</div>

<div class="container">
	<div class="row">
		<div class="col-md-6 col-lg-6">
    	 <div class="well profile">
            <div class="col-sm-12">
                <div class="col-xs-12 col-sm-4">
                    <h2><%= @ride.name %></h2>
                    <p><strong>Make: </strong> <%= @ride.make %></p>
                    <p><strong>Model: </strong> <%= @ride.model %> </p>
                    <p><strong>Year: </strong> <%= @ride.year %> </p>
                    <p><strong>Category: </strong> <%= @ride.category %> </p>
                    <p><strong>Private? </strong> <%= @ride.is_private %> </p>
                </div>             
                <div class="col-xs-12 col-sm-8 text-center">
                    <figure>
                        <%= image_tag(@ride.picture.url, class:"img-circle img-responsive") if @ride.picture? %> 
                    </figure>
                </div>
            </div>            
            <div class="col-xs-12 divider text-center">
                <div class="col-xs-12 col-sm-4 emphasis">
                    <h2><strong> 20,7K </strong></h2>                    
                    <p><small><%= @ride.unit_of_measurement %></small></p>
                    <button class="btn btn-success btn-block"><span class="fa fa-plus-circle"></span> Follow </button>
                </div>
                <div class="col-xs-12 col-sm-4 emphasis">
                    <h2><strong>245</strong></h2>                    
                    <p><small>Following</small></p>
                    <button class="btn btn-info btn-block"><span class="fa fa-user"></span> View Profile </button>
                </div>
                <div class="col-xs-12 col-sm-4 emphasis">
                    <h2><strong>43</strong></h2>                    
                    <p><small>Snippets</small></p>
                    <div class="btn-group dropup btn-block">
                      <button type="button" class="btn btn-primary"><span class="fa fa-gear"></span> Options </button>
                      <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                        <span class="caret"></span>
                        <span class="sr-only">Toggle Dropdown</span>
                      </button>
                      <ul class="dropdown-menu text-left" role="menu">
                        <li><a href="#"><span class="fa fa-envelope pull-right"></span><%= link_to "Settings", edit_ride_path %></a></li>
                        <li><a href="#"><span class="fa fa-list pull-right"></span><%= link_to "Delete", @ride, method: :delete, data: { confirm: "You sure?" } %></a></li>
                        <li class="divider"></li>
                        <li><a href="#"><span class="fa fa-warning pull-right"></span>Report this user for spam</a></li>
                        <li class="divider"></li>
                        <li><a href="#" class="btn disabled" role="button"> Unfollow </a></li>
                      </ul>
                    </div>
                </div>
            </div>
    	 </div>                 
		</div>
		<div class="col-md-6 col-lg-6">
<div class="well">
    <ul class="nav nav-tabs">
      <li class="active"><a href="#home" data-toggle="tab">Intervals</a></li>
      <li><a href="#issues" data-toggle="tab">Issues</a></li>
      <li><a href="#modifications" data-toggle="tab">Modifications</a></li>
    </ul>
    <div id="myTabContent" class="tab-content">
      <div class="tab-pane active in" id="home">
      </div>
      <div class="tab-pane fade" id="issues">
      </div>
      <div class="tab-pane fade" id="modifications">
    	<form id="tab3">
        	<label>New Password</label>
        	<input type="password" class="input-xlarge">
        	<div>
        	    <button class="btn btn-primary">Update</button>
        	</div>
    	</form>
      </div>
  </div>
  </div>
	</div>
</div>
</div>