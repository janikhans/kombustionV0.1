<% provide(:title, "Log in") %>


<div id="login-overlay" class="modal-dialog">
      <div class="modal-content">
          <div class="modal-header">
              <h4 class="modal-title" id="myModalLabel">Login to Kombustion</h4>
          </div>
          <div class="modal-body">
              <div class="row">
                  <div class="col-xs-6">
                    <%= form_for(:session, url: login_path) do |f| %>
                      <div class="well">
                              <div class="form-group">
                                  <%= f.label :email %>
                                  <%= f.text_field :email, class: 'form-control', placeholder: 'example@gmail.com' %>
                                  <span class="help-block"></span>
                              </div>
                              <div class="form-group">
                                  <%= f.label :password %>
                                  <%= f.password_field :password, class: 'form-control', title: 'Please enter your password' %>
                              </div>
                              <div class="checkbox">
                                <%= f.label :remember_me, class: "checkbox inline" do %>
                                  <%= f.check_box :remember_me %>
                                  <span>Remember me</span>
                                <% end %>
                              </div>
                              <%= f.submit "Log in", class: "btn btn-success btn-block" %>
                              <%= link_to "Forgot Password?", new_password_reset_path, class: "btn btn-warning btn-block" %>
                      </div>
                      <% end %>
                  </div>
                  <div class="col-xs-6">
                      <p class="lead">Register now for <span class="text-success">FREE</span></p>
                      <ul class="list-unstyled" style="line-height: 2">
                          <li><span class="fa fa-check text-success"></span> Track your maintenance</li>
                          <li><span class="fa fa-check text-success"></span> Never forget any important service</li>
                          <li><span class="fa fa-check text-success"></span> Explore other user rides</li>
                          <li><span class="fa fa-check text-success"></span> Network with gear heads</li>
                          <li><span class="fa fa-check text-success"></span> Be <strong>AWESOME</strong></li>
                          <li><a href="/read-more/"><u>Read more</u></a></li>
                      </ul>
                      <p><%= link_to "Yes please, I'm awesome!", signup_path, class: "btn btn-info btn-block" %></p>
                  </div>
              </div>
          </div>
      </div>
  </div>